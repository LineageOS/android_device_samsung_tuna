<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:paddingBottom="20dip">

        <TextView android:id="@+id/accel_calibration_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/accel_calibration_text"
                android:paddingTop="10dip"
                android:paddingLeft="20dip"
                android:paddingRight="20dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="10dip"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:layout_below="@+id/accel_calibration_text" >

            <Button
                android:id="@+id/btnaccelCalibReset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/accel_calibration_reset_title" />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>
